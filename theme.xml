<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.0 0.05</pos>
        <logoAlignment>center</logoAlignment>         
        <size>1 0.9</size>
        <logoScale>1.1</logoScale>
        <zIndex>4</zIndex>          
        <logoSize>0.4 0.4</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>    
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/main_bottom.png</path>
      </image>
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex>                 
         <path>./_inc/images/main_top.png</path>
      </image>                      
      <text name="systemInfo">     
         <pos>0.0 0.552</pos>
		 <alignment>center</alignment>         
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/NES-Logo.ttf</fontPath>
	     <fontSize>0.011</fontSize>
         <zIndex>5</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/NES-Logo.ttf</fontPath>
         <fontSize>0.018</fontSize>     
         <pos>0.20 0.95</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/NES-Logo.ttf</fontPath>
         <fontSize>0.018</fontSize>     
         <pos>0.015 0.97</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view> 
   <view name="basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/NES-Logo.ttf</fontPath>
         <fontSize>0.018</fontSize>     
         <pos>0.015 0.97</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>      
   
<!--
System Gamelist
--> 

   <view name="detailed,video,basic">
      <textlist name="gamelist">      
         <selectorColor>1c1c1c00</selectorColor>                     
         <pos>0.05 0.26</pos>
         <size>0.4 0.64</size>
         <selectedColor>F9F900</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/NES-Logo.ttf</fontPath>
         <fontSize>0.021</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>left</alignment>
         <zIndex>2</zIndex>                          
      </textlist>
   </view> 
  
   
<!--
System View Backgrounds
-->  
   
   <view name="basic,video,detailed">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/main_bottom.png</path>
         <zIndex>1</zIndex>          
      </image>                
   </view>   
   
   <view name="basic">
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/system_basic.png</path>
         <zIndex>1</zIndex>          
      </image>                
   </view> 
    
   <view name="detailed,video">
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/system_video.png</path>
         <zIndex>1</zIndex>         
      </image>                
   </view>     
    
<!--
Metadata, description, rating etc
-->      
    

