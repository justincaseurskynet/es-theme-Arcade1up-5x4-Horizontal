         <zIndex>5</zIndex>         
      </text>
   </view>

  

<!--
Images, boxart, snaps, wheel art etc
--> 


   <view name="detailed">
      <image name="md_image">
         <pos>0.755 0.73</pos>
         <maxSize>0.35 0.37</maxSize>
         <zIndex>3</zIndex>         
      </image>           
   </view>

   <view name="video">   
      <video name="md_video">
         <pos>0.755 0.73</pos>
         <maxSize>0.35 0.37</maxSize>
         <zIndex>3</zIndex>
         <delay>1.0</delay>         
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>                  
      </video>               
   </view>
   
</theme>
